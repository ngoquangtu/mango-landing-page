---
import Action from "@/components/Action.astro";
import Icon from "@/components/Icon.astro";
import type { FooterData, Icon as IconType } from "@/config/landing.interface";
import Contact from "./Contact.astro";

interface Props {
  data: FooterData;
}

const { data } = Astro.props;
---

<footer
  class="flex flex-col justify-center text-center gap-y-8 pt-8 bg-black text-white w-full"
>
  <section id="contact">
    <Action as="a" type="text" class="text-xl md:text-2xl" href="/">
      {data.logo}
    </Action>
  </section>
  
  <section>
    <p class="md:text-lg">
      {data.description}
    </p>
  </section>

  <section class="mb-5 flex flex-row flex-wrap justify-center gap-x-3">
    {
      data.socials.map((social) => (
        <Action as="a" type="icon" href={social.href} title={social.icon}>
          <Icon icon={social.icon as IconType} />
        </Action>
      ))
    }
  </section>
  <Contact/>
  

</footer>
