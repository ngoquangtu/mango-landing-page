---
import Background from "@/components/Background.astro";
import type { Meta } from "@/config/landing.interface";
import Header from "@/sections/Header.astro";
import { getLandingData } from "@/services/data.service";
import "@fontsource-variable/rubik";

const data = await getLandingData();
interface Props {
  meta: Meta;
}

const { meta } = Astro.props;

const ldJson = JSON.stringify(meta.ldJson);
---

<!doctype html>
<html
  class="scrollbar-thin scrollbar-thumb-black scrollbar-track-transparent scroll-smooth"
  lang={meta.lang ?? "en"}
>

  <head>
    <meta charset={meta.charset ?? "UTF-8"} />
    <title>{meta.title}</title>
    <meta name="description" content={meta.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={import.meta.env.SITE} />
    <script type="application/ld+json" set:html={ldJson} />
  </head>
  <Header data={data.headerData2} />
  <body class="bg-white">

    <Background />
    <slot />
  </body>
  <footer>
  <div class="footer">Copyright @ MangoPPC- Brand of Mango Fulfillment Solutions CO., LTD</div>
  </footer>
</html>

<style is:global>
  body {
    font-family:
      "Rubik Variable",
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
