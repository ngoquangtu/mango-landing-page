<style>
  .career-section {
    font-family: 'Open Sans', sans-serif;
    padding: 40px 0;
  }

  .hero {
    background-color: #0c10ec;
    padding: 60px 20px;
    color: white;
    border-radius: 8px;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
  }

  .hero-description {
    font-size: 1.25rem;
  }

  .apply-btn {
  display: inline-block;
  text-decoration: none;
  background-color: #0c10ec;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 1.1rem;
  cursor: pointer;
  text-align: center;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

.apply-btn:hover {
  background-color: #000000;
  transform: scale(1.05);
}


  .job-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .application-form {
    flex: 1;
    max-width: 500px;
    background-color: #f9fafb;
    padding: 20px;
    border-radius: 8px;
  }

  .job-listings {
    flex: 1;
    padding: 20px;
  }

  .job-listings .job-card {
    transition: transform 0.3s ease;
  }

  .job-listings .job-card:hover {
    transform: scale(1.05);
  }

  .job-listings .apply-btn {
    background-color: #0c10ec;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 1.1rem;
    margin-top: 20px;
    cursor: pointer;
  }

  .job-listings .apply-btn:hover {
    background-color: #000000;
  }

  .application-form input,
  .application-form select {
    width: 100%;
    padding: 12px;
    margin-bottom: 20px;
    border: 1px solid #181313;
    border-radius: 5px;
  }

  .submit-btn {
    background-color: #0c10ec;
    color: white;
    padding: 15px;
    font-size: 1.2rem;
    border-radius: 8px;
    cursor: pointer;
  }

  .submit-btn:hover {
    background-color: #000000;
  }
</style>
